
@{
    ViewBag.Title = "Banner Application";
}
<div id="divMessage"></div>
<div class="card">
    <ul class="page-action-button">
        <li><a href="#" title="Add Banner Application" onclick="addBannerApplication();"><img src="@Url.Content("~/images/add.png")" alt="Add Banner Application"></a></li>
    </ul>
    <div class="header">
        <h4>Banner License Applications</h4>
    </div>
    <div class="filter-block">
        <div class="row small-gutter">
            <form>
                <div class="col-xs-4">
                    <input type="text" name="txtBannerApplicationID" id="txtBannerApplicationID" class="form-control" placeholder="Reference No." maxlength="100" />
                </div>
                @*<div class="col-xs-4">
                        <input type="text" name="txtIndividualID" id="txtIndividualID" class="form-control" placeholder="MyKad/Passport No" />
                    </div>*@
                <div class="col-xs-4">
                    <button type="button" class="btn btn-primary" onclick="return bindTable();">Search</button>
                    <button type="button" class="btn btn-default" onclick="return clearControls();">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="grid" id="divBannerApplicationTable">
        <table cellspacing="0" class="table table-striped" id="tblBannerApplication"></table>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {

         $('.form-control').keypress(function (e) {
                if (e.which == 13) {
                    bindTable();
                    return false;
                }
         });

         var success = '@(TempData["SuccessMessage"])';
                if (success != null && success != "") {
                    successMessage(success);
                }
              bindTable();
        });

        function addBannerApplication() {
           var link = '@Url.Action("ManageBannerApplication", "BannerApplication")';
             window.location.href = link;
        }

        function bindTable() {

         if (!isValidSearchCriteria('SearchCriteria')) { return false; }

         if ($.fn.DataTable.isDataTable("#tblBannerApplication")) {
             $('#tblBannerApplication').dataTable().fnDestroy();
             $('#divBannerApplicationTable').html('<table class="table table-striped" width="100%"  id="tblBannerApplication"></table>');
           }

         table = $("#tblBannerApplication").dataTable({
                "autoWidth": false,
                "searching": false,
                "paging": true,
                "sPaginationType": "full_numbers",
                "language": {
                    "lengthMenu": "Page Size : _MENU_ ",
                    "info": "Records _START_ to _END_ of (_TOTAL_)",
                    "emptyTable": "No Record(s) Found"
                },
                "processing": true,
                "serverSide": true,
                "pageLength": 10,
                 "ajax": {
                        url: '@Url.Action("BannerApplication", "BannerApplication")',
                        type: "POST",
                        data: bindSearch()
                    },
                    "columns": [
                        {
                            "targets": 0,
                            "searchable": false,
                            "orderable": false,
                            "title": "No.",
                            "data": null,
                            "render": function (data, type, full, meta) {
                                return meta.settings._iDisplayStart + meta.row + 1;
                            }
                        },
                        { "title": "Reference No.", "data": "BannerApplicationID" },
                        { "title": "Business Type.", "data": "BannerDesc" },
                        { "title": "Banner Address", "data": "BannerAddress" },
                        { "title": "Banner Area", "data": "BannerArea" },
                        { "title": "Submitted", "data": "DateSubmitted", render: renderDate },
                        { "title": "Updated", "data": "UpdatedBy" },
                        { "title": "Status", "data": "StatusDesc" },
                        {
                    "title": "Action",
                    "data": null,
                    "render": function (data, type, row) {
                        var appendstring = '';
                        appendstring += '<a  href="@Url.Action("ManageBannerApplication", "BannerApplication")?Id=' + row["BannerApplicationID"] + '" title="Edit"> <img src="@Url.Content("~/images/edit.png")" alt="Edit" /></a>&nbsp; '
                        appendstring += '<a href="javascript:void(0);" data-id="' + row["BannerApplicationID"] + '" onclick="bindDelete(this);" title="Delete"><img src="@Url.Content("~/images/delete.png")" alt="Delete" /></a>';
                        return appendstring
                    },
                    "width": "80px",
                    "orderable": false,
                    "class": "action-icons"
                }
                ],
                "drawCallback": function (settings) {
                    //hide paging and info when empty datattable
                    var api = this.api();
                    if (api.rows({ page: 'current' }).data().length <= 0) {
                        $('#tblBannerApplication_info').hide();
                        $('#tblBannerApplication_paginate').hide();
                        $('#tblBannerApplication_length').hide();
                    }
                    else {
                        $('#tblBannerApplication_info').show();
                        $('#tblBannerApplication_paginate').show();
                        $('#tblBannerApplication_length').show();
                    }
                    bindSortingArrow();
                }
           });
        }

        function clearControls() {
            $("#txtBannerApplicationID").val('');
            $("#txtIndividualID").val('');
            bindTable();
        }

        function bindSearch() {
            var param = {};
            param["BannerApplicationID"] = $('#txtBannerApplicationID').val();
            param["IndividualMkNo"] = $('#txtIndividualID').val();
            return param;
        }

        function isValidSearchCriteria(formName) {
            var isValid = true;
            $("form#" + formName + " input[type=text]").each(function () {
                if ($(this).val().match(/[<>]/)) {
                    $(this).addClass('input-validation-error');
                    isValid = false;
                }
                else {
                    $(this).removeClass('input-validation-error');
                }
            });
            return isValid;
        }

        function bindDelete(item) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                $.ajax({
                    type: "POST",
                    url: encodeURI('@Url.Action("DeleteBannerApplication", "BannerApplication")'),
                    data: { "Id": $(item).attr('data-id') },
                    cache: false,
                    dataType: 'json',
                    success: function (data, textStatus, XMLHttpRequest) {
                        if (data.success) {
                            bindTable();
                            successMessage(data.message);
                        }
                        else {
                            successMessage(data.message);
                        }
                    },
                    error: function (jqXHR, exception, errMsg) {
                    }
                });
            }
        }

    </script>
}