@model TradingLicense.Model.ViewPremiseApplicationModel
@using AutoMapper;
@{
    ViewBag.Title = "View Premise License Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divMessage"></div>
<div class="card">
    <div class="header">
        <h4 id="headerTitle">View Premise License Application</h4>
    </div>
    <div class="body">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="form-group">
                    <div class="control-label">Sectors.</div>
                    <div class="well">@Model.Sector</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="form-group">
                    <div class="control-label">Business Type.</div>
                    <div class="well">@Model.BusinessType</div>
                </div>
            </div>

            <div class="col-md-offset-3 col-lg-3 col-md-3">
                <div class="form-group">
                    @if (Model.AppStatusID == (int)TradingLicense.Infrastructure.Enums.PAStausenum.submittedtoclerk && Model.UserRollTemplate == (int)TradingLicense.Infrastructure.Enums.RollTemplate.Public)
                    {
                        <div class="control-label" style="color:green;">Submitted to Clerk</div>
                    }
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="control-label">Business Code.</div>
                    <div class="well">
                        @for (int i = 0; i < Model.BusinessCodes.Count; i++)
                        {
                            <label>@Model.BusinessCodes[i]</label>
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="control-label">
                        Full Name (Mykad/Passport No.).
                    </div>
                    <div class="well">
                        @for (int i = 0; i < Model.Individuals.Count; i++)
                        {
                            <label>@Model.Individuals[i]</label>
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="control-label">Company.</div>
                    <div class="well">@Model.Company</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="control-label">Premise Area</div>
                    <div class="well">@Model.PremiseArea</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="control-label">Premise Status</div>
                    <div class="well">@Model.PremiseStatus</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="control-label">Premise Type</div>
                    <div class="well">@Model.PremiseType</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="control-label">Premise Type</div>
                    <div class="well">@Model.PremiseModification</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12" id="RequiredDocument">
                <div class="form-group">
                    <div class="control-label">
                        Document List.   
                    </div>
                    <div class="well">
                        @if (Model.RequiredDocs.Count == 0)
                        {
                            <label>No Required Documents</label>
                        }
                        @for (int i = 0; i < Model.RequiredDocs.Count; i++)
                        {
                            <label>@Model.RequiredDocs[i]</label>
                            <br />
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12" id="AdditionalDocument">
                <div class="form-group">
                    <div class="control-label">
                        Additional Document List.
                    </div>
                    <div class="well">
                        @if (Model.AdditionalDocs.Count == 0)
                        {
                            <label>No Additional Documents</label>
                        }
                        @for (int i = 0; i < Model.AdditionalDocs.Count; i++)
                        {
                            <label>@Model.AdditionalDocs[i]</label>
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <input type="button" class="btn btn-default" value="OK" onclick="back()" />
        </div>
    </div>
</div>

@section scripts{
    <script>
        function back() {
            var link = '@Url.Action("PremiseApplication", "PremiseApplication")';
            window.location.href = link;
        }
    </script>
}