                    <div class="form-group">
                        <div class="control-label">Pemilikan Premis<span class="cfont">*</span></div>
                        @Html.DropDownListFor(m => m.PremiseOwnership, new SelectList(PremiseOwnershipList, "Value", "Text"), new { @class = "form-control" })
