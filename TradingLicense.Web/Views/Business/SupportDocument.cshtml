
@{
    ViewBag.Title = "Support Document";
}

<div id="divMessage"></div>
<div class="card">
    <ul class="page-action-button">
        <li><a href="#" title="Add Support Document" onclick="addSupportDocument();"><img src="@Url.Content("~/images/add.png")" alt="Add Support Document"></a></li>
    </ul>
    <div class="header">
        <h4>Support Documents</h4>
    </div>
    <div class="filter-block">
        <div class="row small-gutter">
            <form>
                <div class="col-xs-4">
                    <input type="text" name="txtbusinessCode" id="txtbusinessCode" class="form-control" placeholder="Business Code" maxlength="5" />
                </div>
                <div class="col-xs-4">
                    <button type="button" class="btn btn-primary" onclick="return bindTable();">Search</button>
                    <button type="button" class="btn btn-default" onclick="return clearControls();">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="grid" id="divtblSupportDocs">
        <table cellspacing="0" class="table table-striped" id="tblSupportDocs"></table>
    </div>
</div>

@section scripts{
<script type="text/javascript">
    $(function () {
        $('.form-control').keypress(function (e) {
            if (e.which == 13) {
                bindTable();
                return false;
            }
        });
         var success = '@(TempData["SuccessMessage"])';
                if (success != null && success != "") {
                    successMessage(success);
                }
        bindTable();
        });

        function addSupportDocument() {
           var link = '@Url.Action("ManageSupportDocument", "Business")';
             window.location.href = link;
        }

     function bindTable() {
         if (!isValidSearchCriteria('SearchCriteria')) { return false; }
         if ($.fn.DataTable.isDataTable("#tblSupportDocs")) {
             $('#tblSupportDocs').dataTable().fnDestroy();
             $('#divtblSupportDocs').html('<table class="table table-striped" width="100%"  id="tblSupportDocs"></table>');
         }

         table = $("#tblSupportDocs").dataTable({
             "autoWidth": false,
             "searching": false,
             "paging": true,
             "sPaginationType": "full_numbers",
             "language": {
                 "lengthMenu": "Page Size : _MENU_ ",
                 "info": "Records _START_ to _END_ of (_TOTAL_)",
                 "emptyTable": "No Record(s) Found"
             },
             "processing": true,
             "serverSide": true,
             "pageLength": 10,
                    "ajax": {
                        url: '@Url.Action("SupportDocument", "Business")',
                        type: "POST",
                        data: bindSearch()
                    },
                    "columns": [
                        { "title": "Business Code", "data": "CodeNumber"},
                        { "title": "Support Document Description", "data": "SuppDocDesc", "orderable": false,},

                        {
                    "title": "Action",
                    "data": null,
                    "render": function (data, type, row) {
                        var appendstring = '';
                        appendstring += '<a  href="@Url.Action("ManageSupportDocument", "Business")?Id=' + row["SupportDocsID"] + '" title="Edit"> <img src="@Url.Content("~/images/edit.png")" alt="Edit" /></a>&nbsp; '
                        appendstring += '<a href="javascript:void(0);" data-id="' + row["SupportDocsID"] + '" onclick="bindDelete(this);" title="Delete"><img src="@Url.Content("~/images/delete.png")" alt="Delete" /></a>';
                        return appendstring
                    },
                            "width": "80px",
                    "orderable": false,
                    "class": "action-icons"
                }

             ],
             "drawCallback": function (settings) {
                 //hide paging and info when empty datattable
                 var api = this.api();
                 if (api.rows({ page: 'current' }).data().length <= 0) {
                     $('#tblSupportDocs_info').hide();
                     $('#tblSupportDocs_paginate').hide();
                     $('#tblSupportDocs_length').hide();
                 }
                 else {
                     $('#tblSupportDocs_info').show();
                     $('#tblSupportDocs_paginate').show();
                     $('#tblSupportDocs_length').show();
                 }
                 bindSortingArrow();
             }
                });
        }

        function clearControls() {
            $("#txtbusinessCode").val('');
            bindTable();
        }

        function bindSearch() {
            var param = {};
            param["businessCode"] = $('#txtbusinessCode').val();
            return param;
        }

        function isValidSearchCriteria(formName) {
            var isValid = true;

            $("form#" + formName + " input[type=text]").each(function () {
                if ($(this).val().match(/[<>]/)) {
                    $(this).addClass('input-validation-error');
                    isValid = false;
                }
                else {
                    $(this).removeClass('input-validation-error');
                }
            });
            return isValid;
        }

        function bindDelete(item) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                $.ajax({
                    type: "POST",
                    url: encodeURI('@Url.Action("DeleteSupportDocs", "Business")'),
                    data: { "Id": $(item).attr('data-id') },
                    cache: false,
                    dataType: 'json',
                    success: function (data, textStatus, XMLHttpRequest) {
                        if (data.success) {
                            bindTable();
                            successMessage(data.message);

                        }
                        else {
                            successMessage(data.message);
                        }
                    },
                    error: function (jqXHR, exception, errMsg) {
                    }
                });
            }
        }

</script>
}