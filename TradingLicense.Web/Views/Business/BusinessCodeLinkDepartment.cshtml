
@{
    ViewBag.Title = "Business Code Link Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divMessage"></div>
<div class="card">
    <ul class="page-action-button">
        <li><a href="#" title="Add Business Code Link Department" onclick="addBussCodLinkDep();"><img src="@Url.Content("~/images/add.png")" alt="Add Business Code Link Department"></a></li>
    </ul>
    <div class="header">
        <h4>Business Code Link Departments</h4>
    </div>
    <div class="filter-block">
        <div class="row small-gutter">
            <form>
                <div class="col-xs-4">
                    <input type="text" name="txtbusinessCodeDesc" id="txtbusinessCodeDesc" class="form-control" placeholder="Business Code Description" maxlength="5" />
                </div>
                <div class="col-xs-4">
                    <input type="text" name="txtdepartmentCodeDesc" id="txtdepartmentCodeDesc" class="form-control" placeholder="Department Code Description" maxlength="10" />
                </div>
                <div class="col-xs-4">
                    <button type="button" class="btn btn-primary" onclick="return bindTable();">Search</button>
                    <button type="button" class="btn btn-default" onclick="return clearControls();">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="grid" id="divtblBussCodLinkDep">
        <table cellspacing="0" class="table table-striped" id="tblBussCodLinkDep"></table>
    </div>
</div>

@section scripts{
<script type="text/javascript">
    $(function () {
        $('.form-control').keypress(function (e) {
            if (e.which == 13) {
                bindTable();
                return false;
            }
        });
         var success = '@(TempData["SuccessMessage"])';
                if (success != null && success != "") {
                    successMessage(success);
                }
        bindTable();
        });

        function addBussCodLinkDep() {
           var link = '@Url.Action("ManageBussCodLinkDep", "Business")';
             window.location.href = link;
        }

     function bindTable() {
         if (!isValidSearchCriteria('SearchCriteria')) { return false; }
         if ($.fn.DataTable.isDataTable("#tblBussCodLinkDep")) {
             $('#tblBussCodLinkDep').dataTable().fnDestroy();
             $('#divtblBussCodLinkDep').html('<table class="table table-striped" width="100%"  id="tblBussCodLinkDep"></table>');
         }

         table = $("#tblBussCodLinkDep").dataTable({
             "autoWidth": false,
             "searching": false,
             "paging": true,
             "sPaginationType": "full_numbers",
             "language": {
                 "lengthMenu": "Page Size : _MENU_ ",
                 "info": "Records _START_ to _END_ of (_TOTAL_)",
                 "emptyTable": "No Record(s) Found"
             },
             "processing": true,
             "serverSide": true,
             "pageLength": 10,
                    "ajax": {
                        url: '@Url.Action("BusinessCodeLinkDepartment", "Business")',
                        type: "POST",
                        data: bindSearch()
                    },
                    "columns": [
                        {
                            "targets": 0,
                            "searchable": false,
                            "orderable": false,
                            "title": "No.",
                            "data": null,
                            "render": function (data, type, full, meta) {
                                return meta.settings._iDisplayStart + meta.row + 1;
                            }
                        },
                        { "title": "Business Code Description", "data": "CodeDesc" },
                        { "title": "Department Code Description", "data": "DepartmentDesc" },
                        {
                    "title": "Action",
                    "data": null,
                    "render": function (data, type, row) {
                        var appendstring = '';
                        appendstring += '<a  href="@Url.Action("ManageBussCodLinkDep", "Business")?Id=' + row["BussCodLinkDepID"] + '" title="Edit"> <img src="@Url.Content("~/images/edit.png")" alt="Edit" /></a>&nbsp; '
                        appendstring += '<a href="javascript:void(0);" data-id="' + row["BussCodLinkDepID"] + '" onclick="bindDelete(this);" title="Delete"><img src="@Url.Content("~/images/delete.png")" alt="Delete" /></a>';
                        return appendstring
                    },
                            "width": "80px",
                    "orderable": false,
                    "class": "action-icons"
                }

             ],
             "drawCallback": function (settings) {
                 //hide paging and info when empty datattable
                 var api = this.api();
                 if (api.rows({ page: 'current' }).data().length <= 0) {
                     $('#tblBussCodLinkDep_info').hide();
                     $('#tblBussCodLinkDep_paginate').hide();
                     $('#tblBussCodLinkDep_length').hide();
                 }
                 else {
                     $('#tblBussCodLinkDep_info').show();
                     $('#tblBussCodLinkDep_paginate').show();
                     $('#tblBussCodLinkDep_length').show();
                 }
                 bindSortingArrow();
             }
                });
        }

        function clearControls() {
            $("#txtCodeDesc").val('');
            $("#txtdepartmentDesc").val('');
            bindTable();
        }

        function bindSearch() {
            var param = {};
            param["CodeDesc"] = $('#txtCodeDesc').val();
            param["departmentDesc"] = $('#txtdepartmentDesc').val();
            return param;
        }

        function isValidSearchCriteria(formName) {
            var isValid = true;

            $("form#" + formName + " input[type=text]").each(function () {
                if ($(this).val().match(/[<>]/)) {
                    $(this).addClass('input-validation-error');
                    isValid = false;
                }
                else {
                    $(this).removeClass('input-validation-error');
                }
            });
            return isValid;
        }

        function bindDelete(item) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                $.ajax({
                    type: "POST",
                    url: encodeURI('@Url.Action("DeleteBussCodLinkDep", "Business")'),
                    data: { "Id": $(item).attr('data-id') },
                    cache: false,
                    dataType: 'json',
                    success: function (data, textStatus, XMLHttpRequest) {
                        if (data.success) {
                            bindTable();
                            successMessage(data.message);

                        }
                        else {
                            successMessage(data.message);
                        }
                    },
                    error: function (jqXHR, exception, errMsg) {
                    }
                });
            }
        }

</script>
}
