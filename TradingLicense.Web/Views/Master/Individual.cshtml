
@{
    ViewBag.Title = "Individual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divMessage"></div>
<div class="card">
    <ul class="page-action-button">
        <li><a href="#" title="Add Individual" onclick="addIndividual();"><img src="@Url.Content("~/images/add.png")" alt="Add Individual"></a></li>
    </ul>
    <div class="header">
        <h4>Individuals</h4>
    </div>
    <div class="filter-block">
        <div class="row small-gutter">
            <form>
                <div class="col-xs-3">
                    <input type="text" name="txtfullName" id="txtfullName" class="form-control" placeholder="Full Name" maxlength="100" />
                </div>
                <div class="col-xs-3">
                    <input type="text" name="txtmykadPassport" id="txtmykadPassport" class="form-control" placeholder="MyKad/Passport" maxlength="100" />
                </div>
                <div class="col-xs-3">
                    <input type="text" name="txtphoneNo" id="txtphoneNo" class="form-control" placeholder="Phone Number" maxlength="20" />
                </div>
                <div class="col-xs-3">
                    <button type="button" class="btn btn-primary" onclick="return bindTable();">Search</button>
                    <button type="button" class="btn btn-default" onclick="return clearControls();">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="grid" id="divtblIndividual">
        <table cellspacing="0" class="table table-striped" id="tblIndividual"></table>
    </div>
</div>

@section scripts{
<script type="text/javascript">
    $(function () {
        $('.form-control').keypress(function (e) {
            if (e.which == 13) {
                bindTable();
                return false;
            }
        });
         var success = '@(TempData["SuccessMessage"])';
                if (success != null && success != "") {
                    successMessage(success);
                }
                bindTable();
        });

        function addIndividual() {
           var link = '@Url.Action("ManageIndividual", "Master")';
             window.location.href = link;
        }

        function bindTable() {

         if (!isValidSearchCriteria('SearchCriteria')) { return false; }

         if ($.fn.DataTable.isDataTable("#tblIndividual")) {
             $('#tblIndividual').dataTable().fnDestroy();
             $('#divtblIndividual').html('<table class="table table-striped" width="100%"  id="tblIndividual"></table>');
         }

         table = $("#tblIndividual").dataTable({
             "autoWidth": false,
             "searching": false,
             "paging": true,
             "sPaginationType": "full_numbers",
             "language": {
                 "lengthMenu": "Page Size : _MENU_ ",
                 "info": "Records _START_ to _END_ of (_TOTAL_)",
                 "emptyTable": "No Record(s) Found"
             },
             "processing": true,
             "serverSide": true,
             "pageLength": 10,
                    "ajax": {
                        url: '@Url.Action("Individual", "Master")',
                        type: "POST",
                        data: bindSearch()
                    },
             "columns": [
                 { "title": "Full Name", "data": "FullName"},
                 { "title": "Mykad/Passport", "data": "MykadNo" },
                 { "title": "Individual Email", "data": "IndividualEmail" },
                 { "title": "Phone No", "data": "PhoneNo" },
                 {
                     "title": "Active",
                     "data": "Active",
                     "render": function (data, type, row) {
                         if (data) {
                             return '<label class="label label-success">Active</label>';
                         }
                         else {
                             return '<label class="label label-danger">InActive</label>';
                         }
                     },
                     "width": "10%",
                     "orderable": true,
                 },
                         {
                    "title": "Action",
                    "data": null,
                    "render": function (data, type, row) {
                        var appendstring = '';
                        appendstring += '<a  href="@Url.Action("ManageIndividual", "Master")?Id=' + row["IndividualID"] + '" title="Edit"> <img src="@Url.Content("~/images/edit.png")" alt="Edit" /></a>&nbsp; '
                        appendstring += '<a href="javascript:void(0);" data-id="' + row["IndividualID"] + '" onclick="bindDelete(this);" title="Delete"><img src="@Url.Content("~/images/delete.png")" alt="Delete" /></a>';
                        return appendstring
                    },
                             "width": "80px",
                    "orderable": false,
                    "class": "action-icons"
                }
             ],
             "drawCallback": function (settings) {
                 //hide paging and info when empty datattable
                 var api = this.api();
                 if (api.rows({ page: 'current' }).data().length <= 0) {
                     $('#tblIndividual_info').hide();
                     $('#tblIndividual_paginate').hide();
                     $('#tblIndividual_length').hide();
                 }
                 else {
                     $('#tblIndividual_info').show();
                     $('#tblIndividual_paginate').show();
                     $('#tblIndividual_length').show();
                 }
                 bindSortingArrow();
             }
                });
        }

        function clearControls() {
            $("#txtfullName").val('');
            $("#txtmykadPassport").val('');
            $("#txtphoneNo").val('');
            bindTable();
        }

        function bindSearch() {
            var param = {};
            param["fullName"] = $('#txtfullName').val();
            param["MykadNo"] = $('#txtmykadPassport').val();
            param["phoneNo"] = $('#txtphoneNo').val();
            return param;
        }

        function isValidSearchCriteria(formName) {
            var isValid = true;

            $("form#" + formName + " input[type=text]").each(function () {
                if ($(this).val().match(/[<>]/)) {
                    $(this).addClass('input-validation-error');
                    isValid = false;
                }
                else {
                    $(this).removeClass('input-validation-error');
                }
            });
            return isValid;
        }

        function bindDelete(item) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                $.ajax({
                    type: "POST",
                    url: encodeURI('@Url.Action("DeleteIndividual", "Master")'),
                    data: { "Id": $(item).attr('data-id') },
                    cache: false,
                    dataType: 'json',
                    success: function (data, textStatus, XMLHttpRequest) {
                        if (data.success) {
                            bindTable();
                            successMessage(data.message);

                        }
                        else {
                            successMessage(data.message);
                        }
                    },
                    error: function (jqXHR, exception, errMsg) {
                    }
                });
            }
        }

</script>
}