
@{
    ViewBag.Title = "Signboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divMessage"></div>
<div class="card">
    <ul class="page-action-button">
        <li><a href="#" title="Add Signboard" onclick="addSignboard();"><img src="@Url.Content("~/images/add.png")" alt="Add Signboard"></a></li>
    </ul>
    <div class="header">
        <h4>Signboards</h4>
    </div>
    <div class="filter-block">
        <div class="row small-gutter">
            <form>
                <div class="col-xs-4">
                    <input type="text" name="txtdisplayMethod" id="txtdisplayMethod" class="form-control" placeholder="Display Method" maxlength="100" />
                </div>
                <div class="col-xs-4">
                    <input type="text" name="txtlocation" id="txtlocation" class="form-control" placeholder="Location" maxlength="100" />
                </div>
                <div class="col-xs-4">
                    <button type="button" class="btn btn-primary" onclick="return bindTable();">Search</button>
                    <button type="button" class="btn btn-default" onclick="return clearControls();">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="grid" id="divtblSignboard">
        <table cellspacing="0" class="table table-striped" id="tblSignboard"></table>
    </div>
</div>

@section scripts{
<script type="text/javascript">
    $(function () {
        $('.form-control').keypress(function (e) {
            if (e.which == 13) {
                bindTable();
                return false;
            }
        });
         var success = '@(TempData["SuccessMessage"])';
                if (success != null && success != "") {
                    successMessage(success);
                }
           bindTable();
        });

        function addSignboard() {
           var link = '@Url.Action("ManageSignboard", "Master")';
             window.location.href = link;
        }

     function bindTable() {
         if (!isValidSearchCriteria('SearchCriteria')) { return false; }

         if ($.fn.DataTable.isDataTable("#tblSignboard")) {
             $('#tblSignboard').dataTable().fnDestroy();
             $('#divtblSignboard').html('<table class="table table-striped" width="100%"  id="tblSignboard"></table>');
         }

         table = $("#tblSignboard").dataTable({
             "autoWidth": false,
             "searching": false,
             "paging": true,
             "sPaginationType": "full_numbers",
             "language": {
                 "lengthMenu": "Page Size : _MENU_ ",
                 "info": "Records _START_ to _END_ of (_TOTAL_)",
                 "emptyTable": "No Record(s) Found"
             },
             "processing": true,
             "serverSide": true,
             "pageLength": 10,
                    "ajax": {
                        url: '@Url.Action("Signboard", "Master")',
                        type: "POST",
                        data: bindSearch()
                    },
             "columns": [
                 { "title": "Display Method", "data": "DisplayMethod" },
                 { "title": "Location", "data": "Location" },
                        { "title": "Length", "data": "Length"},
                        { "title": "Width", "data": "Width"},
                        { "title": "With Lamp", "data": "WithLamp"},
                        { "title": "Quantity", "data": "Quantity" },
                        { "title": "FaceQty", "data": "FaceQty"},
                        {
                    "title": "Action",
                    "data": null,
                    "render": function (data, type, row) {
                        var appendstring = '';
                        appendstring += '<a  href="@Url.Action("ManageSignboard", "Master")?Id=' + row["SignboardID"] + '" title="Edit"> <img src="@Url.Content("~/images/edit.png")" alt="Edit" /></a>&nbsp; '
                        appendstring += '<a href="javascript:void(0);" data-id="' + row["SignboardID"] + '" onclick="bindDelete(this);" title="Delete"><img src="@Url.Content("~/images/delete.png")" alt="Delete" /></a>';
                        return appendstring
                    },
                            "width": "80px",
                    "orderable": false,
                    "class": "action-icons"
                }
             ],
             "drawCallback": function (settings) {
                 //hide paging and info when empty datattable
                 var api = this.api();
                 if (api.rows({ page: 'current' }).data().length <= 0) {
                     $('#tblSignboard_info').hide();
                     $('#tblSignboard_paginate').hide();
                     $('#tblSignboard_length').hide();
                 }
                 else {
                     $('#tblSignboard_info').show();
                     $('#tblSignboard_paginate').show();
                     $('#tblSignboard_length').show();
                 }
                 bindSortingArrow();
             }
                });
        }

        function clearControls() {
            $("#txtdisplayMethod").val('');
            $("#txtlocation").val('');
            bindTable();
        }

        function bindSearch() {
            var param = {};
            param["displayMethod"] = $('#txtdisplayMethod').val();
            param["location"] = $('#txtlocation').val();
            return param;
        }

        function isValidSearchCriteria(formName) {
            var isValid = true;

            $("form#" + formName + " input[type=text]").each(function () {
                if ($(this).val().match(/[<>]/)) {
                    $(this).addClass('input-validation-error');
                    isValid = false;
                }
                else {
                    $(this).removeClass('input-validation-error');
                }
            });
            return isValid;
        }

        function bindDelete(item) {
            var x = confirm("Are you sure you want to delete?");
            if (x) {
                $.ajax({
                    type: "POST",
                    url: encodeURI('@Url.Action("DeleteSignboard", "Master")'),
                    data: { "Id": $(item).attr('data-id') },
                    cache: false,
                    dataType: 'json',
                    success: function (data, textStatus, XMLHttpRequest) {
                        if (data.success) {
                            bindTable();
                            successMessage(data.message);

                        }
                        else {
                            successMessage(data.message);
                        }
                    },
                    error: function (jqXHR, exception, errMsg) {
                    }
                });
            }
        }

</script>
}


