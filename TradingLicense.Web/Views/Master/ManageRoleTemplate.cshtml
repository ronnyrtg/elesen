@model TradingLicense.Model.ROLEModel
@{
    ViewBag.Title = "ManageRoleTemplate";
}

<div id="divMessage"></div>
<div class="card">
    <div class="header">
        <h4 id="headerTitle">Kemaskini Peranan Pengguna</h4>
    </div>
    <div class="body">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frmRoleTemplate", id = "frmRoleTemplate" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ROLEID)
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ROLE_DESC, new { @class = "control-label" })<span class="cfont">*</span>
                        @Html.TextBoxFor(m => m.ROLE_DESC, new { @class = "form-control", @maxlength = "100" })
                        @Html.ValidationMessageFor(m => m.ROLE_DESC)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DURATION, new { @class = "control-label" })<span class="cfont">*</span>
                        @Html.TextBoxFor(m => m.DURATION, new { @class = "form-control", @maxlength = "100" })
                        @Html.ValidationMessageFor(m => m.DURATION)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Simpan" />
                        <input type="button" class="btn btn-default" value="Kembali" onclick="back()" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
           var actionError = '@(TempData["ErrorMessage"])';
           if (actionError != null && actionError != "") {
                errorMessage(actionError);
            }
    function back() {
         var link = '@Url.Action("RoleTemplate", "Master")';
        window.location.href = link;
    }
    </script>
}
